parameters:
    level: 5
    paths:
        - includes
    excludePaths:
        - includes/vendor
        - vendor
    ignoreErrors:
        # WordPress specific ignores
        - '#Function wp_[a-z_]+ not found#'
        - '#Function get_[a-z_]+ not found#'
        - '#Function is_[a-z_]+ not found#'
        - '#Function add_[a-z_]+ not found#'
        - '#Function apply_filters not found#'
        - '#Function do_action not found#'
        - '#Function __\(\) expects 1 parameter, 2 given#'
        - '#Function _e\(\) expects 1 parameter, 2 given#'
        - '#Function esc_html__\(\) expects 1 parameter, 2 given#'
        - '#Function esc_attr__\(\) expects 1 parameter, 2 given#'
        - '#Constant WP_[A-Z_]+ not found#'
        - '#Class WP_[A-Za-z_]+ not found#'
        
        # Allow exec functions for binary execution
        - '#Call to function exec\(\) is discouraged#'
        - '#Call to function shell_exec\(\) is discouraged#'
        
        # Allow direct file operations for image processing
        - '#Call to function fopen\(\) is discouraged#'
        - '#Call to function fclose\(\) is discouraged#'
        - '#Call to function fwrite\(\) is discouraged#'
        
    bootstrapFiles:
        - phpstan-bootstrap.php
    
    # WordPress specific configuration
    wordpress:
        wpConfigPath: wp-config.php
        
    # Memory limit for analysis
    memoryLimitFile: .phpstan-memory-limit
    
    # Treat missing classes as errors
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
    
    # Custom rules
    customRulesetUsed: true