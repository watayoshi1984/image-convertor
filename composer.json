{
    "name": "advanced-image-optimizer/wordpress-plugin",
    "description": "Advanced Image Optimizer Pro - High-performance WordPress image optimization plugin with WebP and AVIF support",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Plugin Developer",
            "email": "developer@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "woocommerce/action-scheduler": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpstan/phpstan": "^1.10",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AdvancedImageOptimizer\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdvancedImageOptimizer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* .",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* .",
        "phpstan": "phpstan analyse --level=5 includes/",
        "post-install-cmd": [
            "@php -r \"file_exists('.git/hooks/pre-commit') || copy('dev-tools/pre-commit', '.git/hooks/pre-commit');\""
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "wordpress-install-dir": "wp"
    }
}